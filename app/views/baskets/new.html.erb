<div class="row-fluid">
  <div class="span9">
    <h1 class="title"><%= t('page.new', :model => t('activerecord.models.basket')) -%></h1>

    <%= form_for(@basket, :html => {:name => 'basket_form', :class => 'well form-search'}) do |f| -%>
      <%= f.error_messages -%>
      <%= f.label t('activerecord.attributes.user.user_number') -%>
      <%= f.search_field :user_number, :class => 'search-query' -%>
      <!--
      <div class="field">
      <%= f.label :note -%><br />
      <%= f.text_area :note, :class => 'resource_textarea' -%>
      </div>
      -->
      <%= f.submit t('page.read'), :class => 'btn' -%>
    <%- end -%>
    <%= javascript_tag("$('#basket_user_number').focus().select();") -%>
  </div>

  <div class="span3">
    <ul>
      <li><%= link_to t('activerecord.models.checkin'), new_checkin_path -%></li>
      <li><%= link_to t('page.search_resource', :model => t('activerecord.models.user')), users_path -%></li>
    </ul>
  </div>
</div>
