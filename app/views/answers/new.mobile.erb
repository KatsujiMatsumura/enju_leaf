<div data-role="header">
  <h1 class="title"><%= t('page.showing', :model => t('activerecord.models.answer')) -%></h1>
</div>
<div data-role="content">
  <div id="detail">

<%= form_for(@answer, :url => user_question_answers_path(@answer.question.user, @answer.question)) do |f| -%>
  <%= f.error_messages -%>
  <p>
    <%= f.label t('activerecord.models.question') -%><br />
    <%= @answer.question.body -%>
    <%= f.hidden_field :question_id, :value => @answer.question.id -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.answer.body') -%><br />
    <%= f.text_area :body, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.answer.item_identifier_list') -%><br />
    <%= f.text_area :item_identifier_list, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.label t('activerecord.attributes.answer.url_list') -%><br />
    <%= f.text_area :url_list, :class => 'resource_textarea' -%>
  </p>

  <p>
    <%= f.submit %>
  </p>
  <%= javascript_tag("$('#answer_body').focus()") -%>
<%- end -%>
</div>
</div>
