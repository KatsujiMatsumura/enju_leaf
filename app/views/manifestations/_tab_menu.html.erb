<ul>
  <li class="selected"><a href="#detail"><em><%= t('page.detail') -%></em></a></li>
  <%- if manifestation.original_resources.present? or manifestation.derived_resources.present? -%>
    <li><a href="#resource"><em><%= t('page.related_resource') -%> (<%= manifestation.original_resources.size + manifestation.derived_resources.size -%>)</em></a></li>
  <%- end -%>
  <%- unless manifestation.questions(:user => current_user).empty? -%>
    <li><a href="#question"><em><%= t('resource.question') -%></em></a></li>
  <%- end -%>
  <%- unless manifestation.amazon_customer_reviews.blank? -%>
    <li><a href="#amazon"><em><%= t('page.amazon_review') -%></em></a></li>
  <%- end -%>
  <%- unless @xisbn_resources.blank? -%>
    <li><a href="#worldcat"><em><%= 'WorldCat' -%></em></a></li>
  <%- end -%>
  <%- if current_user.try(:has_role?, 'Librarian') -%>
    <li><a href="#history"><em><%= t('page.history') -%></em></a></li>
  <%- end -%>
</ul>
