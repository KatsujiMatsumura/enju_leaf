<div class="search_form">
  <%= form_for :manifestations, :url => manifestations_path, :html => {:method => 'get', :class => 'well form-search'} do -%>
    <%= t('page.search_term') -%>:
    <%= search_field_tag 'query', h(@query), {:id => 'search_form_top', :class => 'search-query', :placeholder => t('page.search_term')} -%>
    <%= hidden_field_tag 'reservable', h(@reservable) if @reservable -%>
    <%= submit_tag t('page.search'), :class => 'btn' -%>
    <br />
    <%= link_to t('page.advanced_search'), page_advanced_search_path -%>
  <%- end -%>
</div>
