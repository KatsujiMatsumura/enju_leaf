<div data-role="header"> 
  <h1 class="title"><%= t('page.showing', :model => t('activerecord.models.resource')) -%></h1>
</div>
<div data-role="content">
<%= render :partial => 'title', :locals => {:manifestation => @manifestation} %>
<table>
<tr>
<th>ISBN</th>
<td><%= @manifestation.isbn %></td>
</tr>
<tr>
<th>Price</th>
<td><%= @manifestation.price %></td>
</tr>
<table>
<div id="gbsthumbnail" style="width: 160px; height: 200px"></div>

<script type="text/javascript">
  function addTheCover(booksInfo){
    var link = '<img src="unknown_resource.png" width="100" height="100" />';
    for (i in booksInfo) {
      var book = booksInfo[i];
      if (book.thumbnail_url != undefined)  {
        link = '<img src="' + book.thumbnail_url.replace('zoom=5', 'zoom=1') + '"/>';
       }
     }
     document.getElementById('gbsthumbnail').innerHTML = link;
   }
</script>
<script src="http://books.google.com/books?jscmd=viewapi&bibkeys=ISBN:test&callback=addTheCover"></script>
</div>
