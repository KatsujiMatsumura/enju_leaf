<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="span8">
      <h1 class="title"><%= t('page.sign_in') -%> : Next-L Enju</h1>
      <%= f.error_messages -%>

      <%= raw sanitize(textilize(h(@library_group.login_banner))) %>

    </div>

  <div class="span4">
    <%= f.label :username do %>
      <%= t('activerecord.attributes.user.username') %><br />
      <%= f.text_field :username, :class => 'input-middle' %>
    <% end %>

    <%= f.label :password do %>
      <%= t('activerecord.attributes.user.password') %><br />
      <%= f.password_field :password, :class => 'input-middle' %>
    <% end %>

    <p id="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if devise_mapping.rememberable? -%>
      <%= f.label :remember_me, :class => 'checkbox' do %>
        <%= t('user.remember_me') %>
        <%= f.check_box :remember_me %>
      <% end %>
    <% end -%>

    <p><%= f.submit t('page.sign_in'), :class => 'btn' %></p>

  <%= javascript_tag("$('#user_username').focus().select();") -%>

  <%= render "devise/shared/links" %>

  </div>
<% end -%>
