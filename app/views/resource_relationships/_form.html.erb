<%= form_for(@resource_relationship) do |f| %>
  <% if @resource_relationship.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@resource_relationship.errors.count, "error") %> prohibited this resource_relationship from being saved:</h2>

      <ul>
      <% @resource_relationship.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <% if @resource_relationship.try(:parent) %>
      <%= f.label :parent_id %><br />
      <%= link_to @resource_relationship.parent.original_title, @resource_relationship.parent %>
      <%= f.hidden_field :parent_id %>
    <% else %>
      <%= f.label :parent_id %><br />
      <%= f.text_field :parent_id %>
    <% end %>
  </div>
  <div class="field">
    <% if @resource_relationship.child.try(:original_title) %>
      <%= f.label :child_id %><br />
      <%= link_to @resource_relationship.child.original_title, @resource_relationship.child %>
      <%= f.hidden_field :child_id %>
    <% else %>
      <%= f.label :child_id %><br />
      <%= f.text_field :child_id %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :resource_relationship_type_id %><br />
    <%= f.select(:resource_relationship_type_id, @resource_relationship_types.collect{|r| [r.display_name.localize, r.id]}) -%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
