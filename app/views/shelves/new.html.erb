<div class="row-fluid">
  <div class="span9">
    <h1 class="title"><%= t('page.new', :model => t('activerecord.models.shelf')) -%></h1>
    <%= render 'form' %>
  </div>

  <div class="span3">
    <ul>
      <li>
        <%- if @shelf.library -%>
          <%= link_to t('page.back'), library_shelves_path(@shelf.library) -%>
        <%- else -%>
          <%= link_to t('page.back'), shelves_path -%>
        <%- end -%>
      </li>
    </ul>
  </div>
</div>
