<div class="row-fluid">
<div class="span9">
<h1 class="title"><%= t('page.showing', :model => t('activerecord.models.language')) -%></h1>
<p id="notice"><%= notice %></p>

<p>
  <strong><%= t('activerecord.attributes.language.native_name') -%>:</strong>
  <%= @language.native_name -%>
</p>

<p>
  <strong><%= t('activerecord.attributes.language.name') -%>:</strong>
  <%= @language.name -%>
</p>

<p>
  <strong><%= t('activerecord.attributes.language.display_name') -%>:</strong>
  <%= @language.display_name.localize -%>
</p>

<p>
  <strong><%= t('activerecord.attributes.language.note') -%>:</strong>
  <%= @language.note -%>
</p>

</div>

<div class="span3">
  <ul>
    <li><%= link_to t('page.edit'), edit_language_path(@language) -%></li>
    <li><%= back_to_index(flash[:page_info]) -%></li>
  </ul>
</div>
</div>
