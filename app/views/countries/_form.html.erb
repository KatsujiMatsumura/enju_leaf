<%= simple_form_for(@country, :validate => true) do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_area :name, :class => 'resource_textarea' %>
  </div>

  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note, :class => 'resource_textarea' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
