<div class="row-fluid">
  <div class="span9">
    <h1 class="title"><%= t('page.listing', :model => t('activerecord.models.question')) -%></h1>

    <%= form_for :questions, :url => questions_path, :html => {:method => 'get', :class => 'well form-search'} do -%>
      <%= t('page.search_term') -%>: <%= search_field_tag 'query', h(@query), {:id => 'search_form_top', :class => 'search-query', :placeholder => t('page.search_term')} -%>
      <%= submit_tag t('page.search'), :class => 'btn' -%>
    <%- end -%>

    <%= render 'list' -%>
  </div>

  <div class="span3">
    <%= render 'solved_facet' -%>
  <ul>
  <%- if can? :create, Question -%>
    <li><%= link_to t('question.my'), user_questions_path(current_user) -%></li>
    <li><%= link_to t('page.new', :model => t('activerecord.models.question')), new_question_path -%></li>
  <%- end -%>
  </ul>
    <%= render 'crd' -%>
  </div>
</div>
