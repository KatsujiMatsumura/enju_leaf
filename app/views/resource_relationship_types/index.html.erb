<div id="content_detail">
<h1 class="title"><%= t('page.listing', :model => t('activerecord.models.resource_relationship_type')) -%></h1>
<div id="content_list">

<table class="index">
  <tr>
    <th id="position"></th>
    <th><%= t('activerecord.attributes.resource_relationship_type.name') -%></th>
    <th><%= t('activerecord.attributes.resource_relationship_type.display_name') -%></th>
    <th><%= t('activerecord.attributes.resource_relationship_type.note') -%></th>
    <th></th>
  </tr>

<%- @resource_relationship_types.each do |resource_relationship_type| -%>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      <%- if can? :destroy, resource_relationship_type -%>
        <%= move_position(resource_relationship_type) -%>
      <%- end -%>
    </td>
    <td><%= link_to h(resource_relationship_type.name), resource_relationship_type -%></td>
    <td><%= link_to h(resource_relationship_type.display_name.localize), resource_relationship_type -%></td>
    <td><%= resource_relationship_type.note -%></td>
    <td>
      <%- if can? :destroy, resource_relationship_type -%>
        <%= link_to t('page.edit'), edit_resource_relationship_type_path(resource_relationship_type) -%>
        <%= link_to t('page.destroy'), resource_relationship_type, :confirm => t('page.are_you_sure'), :method => :delete -%>
      <% end %>
    </td>
  </tr>
<%- end -%>
</table>

</div>
</div>

<div id="submenu">
  <ul>
    <li><%= link_to t('page.new', :model => t('activerecord.models.resource_relationship_type')), new_resource_relationship_type_path -%></li>
  </ul>
</div>
