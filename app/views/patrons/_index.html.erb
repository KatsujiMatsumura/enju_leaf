<div class="row">
  <div class="span9">
    <h1 class="title"><%= t('page.listing', :model => t('activerecord.models.patron')) -%></h1>

    <div class="search_form">
      <%= form_for :patrons, :url => patrons_path, :html => {:method => 'get', :class => 'well form-search'} do -%>
        <%= t('page.search_term') -%>: <%= search_field_tag 'query', h(@query), {:id => 'search_form_top', :class => 'form-search', :placeholder => t('page.search_term')} -%>
        <%= submit_tag t('page.search'), :class => 'btn' -%>
      <%- end -%>
    </div>

<table class="table table-striped index">
  <tr>
    <th><%= t('activerecord.attributes.patron.full_name') -%></th>
    <th><%= t('activerecord.models.patron_type') -%></th>
    <th id="edit_icons"></th>
  </tr>
  <%= render @patrons %>
</table>

    <%= will_paginate(@patrons) -%>
  </div>

  <div class="span3">
    <ul>
      <%- if can? :create, Patron -%>
        <li><%= link_to t('patron.add'), new_patron_path -%></li>
        <% if defined?(EnjuResourceMerge) %>
          <li><%= link_to t('page.merge', :model => t('activerecord.models.patron')), patron_merge_lists_path -%></li>
        <% end %>
      <%- end -%>
    </ul>
  </div>
</div>
